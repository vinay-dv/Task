<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView

        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="140dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo1"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:layout_marginTop="20dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/ic_person_black_24dp"
        ></EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        ></EditText>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textSize="30sp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:textColor="#ffff"
        android:shadowColor="#ffff"></Button>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_above="@+id/createbutton"
            android:layout_centerInParent="true"
            android:text="Don't You Have Account"
            android:layout_marginBottom="20dp"
            ></TextView>

        <Button
            android:id="@+id/createbutton"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#ffff"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/button"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:text="Create Account"
            android:textAllCaps="false"
            ></Button>
    </RelativeLayout>


</LinearLayout>