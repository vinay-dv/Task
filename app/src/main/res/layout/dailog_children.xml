<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextchild1_Dailog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"
        android:layout_marginTop="30dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ></EditText>
    <AutoCompleteTextView
        android:id="@+id/editTextchild2_Dailog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Sex"
        android:layout_marginTop="20dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ></AutoCompleteTextView>
    <EditText
        android:id="@+id/editTextchild3_Dailog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Date of Birth"
        android:layout_marginTop="20dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ></EditText>
    <EditText
        android:id="@+id/editTextchild4_Dailog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Father's Name"
        android:layout_marginTop="20dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ></EditText>
    <EditText
        android:id="@+id/editTextchild5_Dailog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Mothers's Name"
        android:layout_marginTop="20dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ></EditText>
    <AutoCompleteTextView
        android:id="@+id/editTextchild6_Dailog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="State"
        android:layout_marginTop="20dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ></AutoCompleteTextView>
    <AutoCompleteTextView
        android:id="@+id/editTextchild7_Dailog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="District"
        android:layout_marginTop="20dp"
        android:textColor="#B9B5B5"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        ></AutoCompleteTextView>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:textSize="20sp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="45dp"
        android:text="Submit"
        android:textColor="#ffff"
        android:layout_marginBottom="20dp"
        android:shadowColor="#ffff"></Button>
</LinearLayout>