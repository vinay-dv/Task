<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_marginTop="-3dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:elevation="16dp"
        android:background="@drawable/home"
        android:orientation="horizontal">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:src="@drawable/logo1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp"
            ></ImageView>
        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_power_settings_new_black_24dp"
            android:layout_alignParentRight="true"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LogOut"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="18dp"
            android:textColor="#ffff"
            android:layout_marginBottom="15dp"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Name: Ramesh Prakash"
            android:textColor="#000"
            android:textSize="20sp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="Organization: Bal Vikas"
            android:textSize="20sp"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="Designation: Cluster Coordinator"
            android:textSize="20sp"
            ></TextView>


        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/image1"
            android:layout_height="260dp"
            ></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"

        >
        <FrameLayout
            android:id="@+id/frame_state"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame"
            >
            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/state1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                ></ImageView>
            <TextView
                android:text="State"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="90dp"
                ></TextView>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  "
            ></TextView>
        <FrameLayout
            android:id="@+id/frame_district"
            android:background="@drawable/frame"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/district"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                ></ImageView>
            <TextView
                android:text="District"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="90dp"
                ></TextView>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  "
            ></TextView>
        <FrameLayout
            android:id="@+id/frame_child"
            android:layout_weight="1"
            android:background="@drawable/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/child1"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                ></ImageView>
            <TextView
                android:text="Child"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="90dp"
                ></TextView>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1dp">

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@drawable/homescreen"
            android:layout_height="20dp"
            android:elevation="16dp"
            >

        </ImageView>

    </RelativeLayout>
</LinearLayout>